<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <layer-list>
            <item>
                <shape android:dither="true">
                    <stroke android:width="@dimen/ml_dimen_1"
                        android:color="@color/ml_border_gray" />
                    <corners android:radius="@dimen/ml_dimen_24" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:dither="true">
                    <stroke android:width="@dimen/ml_dimen_1"
                        android:color="@color/ml_border_red" />
                    <corners android:radius="@dimen/ml_dimen_24" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>