<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:dither="true">
            <stroke android:color="@color/ml_border_white"
                android:dashWidth="@dimen/ml_dimen_4"
                android:dashGap="@dimen/ml_dimen_2"
                android:width="@dimen/ml_dimen_1"/>
            <corners android:radius="@dimen/ml_dimen_24" />
            <solid android:color="@color/ml_btn_red_normal"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:dither="true">
            <stroke android:color="@color/ml_border_gray"
                android:dashGap="@dimen/ml_dimen_2"
                android:width="@dimen/ml_dimen_1"
                android:dashWidth="@dimen/ml_dimen_4"/>
            <corners android:radius="@dimen/ml_dimen_24" />
            <solid android:color="@color/ml_btn_red_pressed" />
        </shape>
    </item>
</selector>